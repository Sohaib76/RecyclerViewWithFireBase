<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="14dp"
    android:paddingBottom="25dp"
    android:layout_marginBottom="5dp"
    android:background="@android:color/white"


    >


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imgExamSchedule"

        />


    <TextView
        android:id="@+id/subjectExamSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgExamSchedule"
        android:text="English"
        android:textSize="24dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="12dp"
        />


    <TextView
        android:id="@+id/dateExamSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="30/9/2018"
        android:layout_below="@+id/subjectExamSchedule"
        android:layout_toRightOf="@id/imgExamSchedule"
        android:textSize="25dp"
        android:layout_marginLeft="50dp"
        />




</RelativeLayout>